<h1 class="confirm_title">確認画面</h1>
<%= form_with(model: @feed, url: feeds_path, local: true) do |form| %>
  <!-- 確認画面でアップロードした画像を表示させるための記述 -->
  <p class="confirmcontent">コメント:<%= @feed.content %></p>
  <div class="content">
    <%= form.hidden_field :content %>
  </div>
  <div class="feed_image">
    <%= image_tag(@feed.image.url, class: 'feed_img'), if @feed.image && @feed.image.url %>
  </div>
  <div class="image_cache">
    <%= form.hidden_field :image_cache %>
  </div>
  <div class="actions">
    <%= form.submit "投稿する" %>
  </div>
<% end %>
<%= form_with(model:@feed, url: new_feed_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <div class="back">
    <%= form.submit "戻る", name: "back" %>
  </div>
<% end %>